@model IEnumerable<MyBlog.Models.Category>
@{
    ViewData["Title"] = "CategoryPage";
}

<div style="margin: 20px">
    <a href="@Url.Action("CreateNewCategory","Home")"
       class="btn btn-primary btn-lg">Create new</a>
</div>

<div style="margin: 20px">
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
               
                <a asp-action="EditCategory" asp-controller="Home" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteCategory" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
</div>